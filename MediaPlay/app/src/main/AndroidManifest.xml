<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zq.mediaplay">

    <!-- 使用音场效果必要的权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- 授予该程序向外部存储器写入数据的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_music"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mediarecorder.MediaRecorderActivity" />
        <activity android:name=".MediaMusicActivity" />
        <activity android:name=".soundpool.SoundPoolActivity" />
        <activity android:name=".surfacemediaplayer.SurfaceMediaPlayerActivity" />
        <activity android:name=".videoviewtest.VideoViewActivity" />
        <activity android:name=".camera.CameraPictureActivity" />
        <activity android:name=".mediarecorder.AudioRecordActivity"></activity>
    </application>

</manifest>